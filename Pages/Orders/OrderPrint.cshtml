@page
@model ADLRestaurant.Pages.Orders.OrderPrintModel
@{
    Layout = null; // optional: to avoid normal layout in PDF
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Order Receipt</title>
    <style>
        body {
            font-family: Arial;
            font-size: 14px;
            margin: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }

        .text-center {
            text-align: center;
        }

        .fw-bold {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h2 class="text-center">RESTAURANT NAME</h2>
    <h4 class="text-center">Order Receipt (Order #@Model.OrderId)</h4>
    <p><strong>Table:</strong> @Model.TableId</p>
    <p><strong>Date:</strong> @DateTime.Now.ToString("dd-MM-yyyy hh:mm tt")</p>

    <table>
        <thead>
            <tr>
                <th>Item</th>
                <th>Qty</th>
                <th>Rate</th>
                <th>GST %</th>
                <th>GST Amt</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>₹ @item.Rate</td>
                    <td>@item.GST %</td>
                    <td>₹ @item.GSTAmount</td>
                    <td>₹ @item.TotalAmount</td>
                </tr>
            }
        </tbody>
    </table>
    <p class="fw-bold text-end">Grand Total: ₹ @Model.GrandTotal</p>
</body>
</html>
