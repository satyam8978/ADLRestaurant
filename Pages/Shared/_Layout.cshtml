@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ADL Restaurant</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body style="min-height: 100vh; display: flex; flex-direction: column;">

    <div class="d-flex flex-grow-1" style="flex: 1 1 auto;">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
            <h4 class="text-center mb-4">ADL Soft Codes</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-page="/Tables/Index"><i class="fa fa-chair me-2"></i>Tables</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-page="/Items/Index"><i class="fa fa-utensils me-2"></i>Items</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-page="/Orders/New"><i class="fa fa-plus me-2"></i>New Order</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-page="/Orders/Ongoing"><i class="fa fa-spinner me-2"></i>Ongoing Orders</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-page="/Orders/Completed"><i class="fa fa-check me-2"></i>Completed Orders</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-page="/Reports/Index"><i class="fa fa-chart-line me-2"></i>Sales Report</a>
                </li>
            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="flex-grow-1 d-flex flex-column">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand navbar-light bg-light shadow-sm px-4">
                <div class="container-fluid justify-content-between">
                    <span class="navbar-brand mb-0 h5">ADL Restaurant</span>
                    <div class="d-flex align-items-center">
                        <span class="me-3">Welcome, <strong>Admin</strong></span>
                        <a class="btn btn-sm btn-outline-danger" href="#"><i class="fa fa-sign-out-alt"></i> Logout</a>
                    </div>
                </div>
            </nav>

            <!-- Page Body -->
            <div class="flex-grow-1 px-4 py-3">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="bg-dark text-white text-center py-2 mt-auto">
                Designed and developed by <strong>ADL Soft Codes</strong>
            </footer>
        </div>
    </div>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
