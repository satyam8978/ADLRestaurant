@page
@model ADLRestaurant.Pages.RegistrationModel
@{
    Layout = null;
    ViewData["Title"] = "Restaurant Registration";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 4 -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        /* Set the background image */
        body {
            background-image: url(https://images.pexels.com/photos/262978/pexels-photo-262978.jpeg);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            font-family: 'Arial', sans-serif;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: rgba(255, 255, 255, 0.8);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 3rem;
        }

        .form-group label {
            font-size: 1.1rem;
        }

        h3 {
            font-size: 1.75rem;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            width: 100%;
            padding: 12px;
            font-size: 1.25rem;
        }

            .btn-primary:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .sidebar {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .sidebar h5 {
                font-weight: bold;
            }

            .sidebar ul {
                list-style-type: none;
                padding-left: 0;
            }

                .sidebar ul li {
                    margin-bottom: 10px;
                }

        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Sidebar with instructions -->
            <div class="col-md-4">
                <div class="sidebar">
                    <h5>How Registration Works</h5>
                    <ul>
                        <li><strong>Step 1:</strong> Fill in your details, including the restaurant name and owner information.</li>
                        <li><strong>Step 2:</strong> After submitting, you will receive a verification link via email.</li>
                        <li><strong>Step 3:</strong> The email will include your Restaurant ID and a default password.</li>
                        <li><strong>Step 4:</strong> Use the Restaurant ID and default password to log in. A popup will prompt you to change your password.</li>
                        <li><strong>Step 5:</strong> After changing your password, you’ll automatically receive a 15-day free trial.</li>
                        <li><strong>Step 6:</strong> Explore all features during the trial period.</li>
                        <li><strong>Step 7:</strong> After the trial, choose a subscription plan to continue using the platform.</li>
                    </ul>
                </div>
            </div>

            <!-- Registration Form -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Restaurant Registration</h3>
                        <p class="mb-0">Welcome to ADL Soft Codes. Let's get your restaurant onboard!</p>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <!-- Owner Name -->
                            <div class="form-group">
                                <label for="OwnerName">Owner Name</label>
                                <input type="text" class="form-control" id="OwnerName" name="OwnerName" required placeholder="Enter owner name">
                            </div>

                            <!-- Email -->
                            <div class="form-group">
                                <label for="Email">Email Address</label>
                                <input type="email" class="form-control" id="Email" name="Email" required placeholder="Enter email for login and verification">
                            </div>

                            <!-- Mobile Number -->
                            <div class="form-group">
                                <label for="MobileNumber">Mobile Number</label>
                                <input type="text" class="form-control" id="MobileNumber" name="MobileNumber" required placeholder="Enter your mobile number">
                            </div>

                            <!-- Restaurant Name -->
                            <div class="form-group">
                                <label for="RestaurantName">Restaurant Name</label>
                                <input type="text" class="form-control" id="RestaurantName" name="RestaurantName" required placeholder="Enter restaurant name">
                            </div>

                            <!-- Plan Selection (Hidden for now) -->
                            <input type="hidden" name="Plan" value="Trial">
                            <input type="hidden" name="SubscriptionStartDate" value="@DateTime.Now">
                            <input type="hidden" name="SubscriptionEndDate" value="@DateTime.Now.AddDays(15)">

                            <!-- Submit Button -->
                            <div class="d-flex justify-content-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">Register Now</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-muted">
                        <p>By registering, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
