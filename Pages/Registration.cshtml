@page
@model ADLRestaurant.Pages.RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Restaurant Registration";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 4 -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        body {
            background-image: url(https://images.pexels.com/photos/262978/pexels-photo-262978.jpeg);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            font-family: 'Arial', sans-serif;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: rgba(255, 255, 255, 0.8);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 3rem;
        }

        .form-group label {
            font-size: 1.1rem;
        }

        h3 {
            font-size: 1.75rem;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            width: 100%;
            padding: 12px;
            font-size: 1.25rem;
        }

            .btn-primary:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .sidebar {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .sidebar h5 {
                font-weight: bold;
            }

            .sidebar ul {
                list-style-type: none;
                padding-left: 0;
            }

                .sidebar ul li {
                    margin-bottom: 10px;
                }

        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-4">
                <div class="sidebar">
                    <h5>How Registration Works</h5>
                    <ul>
                        <li><strong>Step 1:</strong> Fill in your details, including the restaurant name and owner information.</li>
                        <li><strong>Step 2:</strong> After submitting, you will receive a verification link via email.</li>
                        <li><strong>Step 3:</strong> The email will include your Restaurant ID and a default password.</li>
                        <li><strong>Step 4:</strong> Use the Restaurant ID and default password to log in. A popup will prompt you to change your password.</li>
                        <li><strong>Step 5:</strong> After changing your password, you’ll automatically receive a 15-day free trial.</li>
                        <li><strong>Step 6:</strong> Explore all features during the trial period.</li>
                        <li><strong>Step 7:</strong> After the trial, choose a subscription plan to continue using the platform.</li>
                    </ul>
                </div>
            </div>

            <!-- Registration Form -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3>Register Restaurant</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="Input.RestaurantName"></label>
                                <input asp-for="Input.RestaurantName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.OwnerName"></label>
                                <input asp-for="Input.OwnerName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" type="email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.MobileNumber"></label>
                                <input asp-for="Input.MobileNumber" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-primary">Register</button>
                        </form>

                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                            <script>
                                window.onload = function () {
                                    alert("@Model.SuccessMessage");
                                };
                            </script>
                        }
                        else if (Model.ErrorMessage != null)
                        {
                            <div class="alert alert-danger mt-3">
                                <strong>Error:</strong> @Model.ErrorMessage
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
