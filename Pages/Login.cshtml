@page
@model ADLRestaurant.Pages.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-success text-white text-center">
                        <h4>Restaurant Login</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="Input.UserId">User ID</label>
                                <input asp-for="Input.UserId" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.LoginPin">Login PIN</label>
                                <input asp-for="Input.LoginPin" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-success btn-block">Login</button>
                        </form>

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
